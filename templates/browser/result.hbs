<li class="entry" data-id="{{id}}" data-name="{{name}}">
  {{#unless @root.makingPlaylist}}
  <a draggable="" class="draggable"> <i class="icon fa-solid fa-grip-lines"></i> </a>
  {{else}}
  <input type="checkbox" value="{{id}}-{{name}}" name="playlistSounds">
  {{/unless}}
  <h4 class="title">
    <span class="name">{{name}}</span>
    <span class="soundset">{{soundset}}</span>
  </h4>
  <div class="controls">
    <a data-action="burger"> <i class="fa-solid fa-ellipsis-vertical"></i> </a>
    {{#if playing}}
    <button type="button" data-action="stop" class="icon fa-solid fa-stop"></button>
    {{else}}
    <button type="button" data-action="play" class="icon fa-solid fa-volume-high"></button>
    {{/if}}
  </div>
</li>
